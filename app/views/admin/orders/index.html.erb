<div class="row">
  <div class="col-lg-12">
    <ol class="breadcrumb">
      <li><a href="#">首页</a></li>
      <li class="active"><span>订单</span></li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="main-box no-header clearfix">
      <div class="main-box-body clearfix">
        <div class="table-responsive">
          <table class="table user-list table-hover">
            <thead>
            <tr>
              <th><span>ID</span></th>
              <th><span>缩略图</span></th>
              <th><span>背面</span></th>
              <th><span>名称</span></th>
              <th><span>所属账号</span></th>
              <th><span>状态</span></th>
              <th><span>创建时间</span></th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td>
                  <% if order.front_image_url.present? %>
                   <%= image_tag order.front_image_url %>
                  <% end %>
                </td>
                <td>
                  <% if order.back_image_url.present? %>
                    <%= image_tag order.back_image_url %>
                  <% end %>
                </td>
                <td>
                  <span class="user-subhead"><%= order.receiver%></span>
                </td>
                <td>
                  <%= order.try(:account).try(:name) || '' %>
                </td>
                <td>
                  <%= order.state%>
                </td>
                <td>
                  <%= created_at(order.created_at)%>
                </td>
                <td style="width: 20%;">
                  <a href="<%= admin_order_path(order,true)%>" class="table-link">
                    <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                    </span>
                  </a>
                </td>
              </tr>

            <% end %>

            </tbody>
          </table>
          <%= will_paginate @templates %>
        </div>
      </div>
    </div>
  </div>
</div>
